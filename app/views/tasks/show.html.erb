<%= link_to("Back to List", tasks_path, class: 'btn btn-secondary mb-3') %>

<div class="tasks show">
  <h2>Show Task</h2>

  <div class="actions mb-3">
    <%= link_to('Edit', edit_task_path(@task), class: 'btn btn-warning me-2') %>
    <%= link_to('Delete', delete_task_path(@task), class: 'btn btn-danger') %>
  </div>

  <table class="table table-bordered" summary="Task detail view">
    <tr>
      <th>Name</th>
      <td><%= @task.name %></td>
    </tr>
    <tr>
      <th>Position</th>
      <td><%= @task.position %></td>
    </tr>
    <tr>
      <th>Completed</th>
      <td><%= @task.completed? ? 'Yes' : 'No' %></td>
    </tr>
    <tr>
      <th>Description</th>
      <td><%= simple_format(word_wrap(@task.description, line_width: 120)) %></td>
    </tr>
    <tr>
      <th>Category</th>
      <td>
        <% if @task.category %>
          <%= @task.category.name %>
        <% end %>
      </td>
    </tr>
    <tr>
      <th>Created</th>
      <td><%= @task.created_at.to_s %></td>
    </tr>
    <tr>
      <th>Updated</th>
      <td><%= @task.updated_at.to_s %></td>
    </tr>
  </table>
</div>
