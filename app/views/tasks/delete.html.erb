<%= link_to("Back to List", tasks_path, class: 'btn btn-secondary mb-3') %>

<div class="tasks delete">
  <h2>Delete Task</h2>

  <%= form_for(@task, method: 'delete', html: {class: "mt-4"}) do |f| %>
    <% # url: task_path(@task), method: 'delete' %>

    <p class="mb-3">Are you sure you want to permanently delete this task?</p>
    <p class="mb-3"><%= @task.name %></p>

    <div class="form-buttons">
      <%= f.submit("Delete Task", class: 'btn btn-danger') %>
    </div>

  <% end %>
</div>
